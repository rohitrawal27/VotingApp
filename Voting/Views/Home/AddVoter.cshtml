@using Voting.Domain
@model Voter
<div class="card">
    <h5 class="card-header">Add Voter Form
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary float-end">Home</a>
    </h5>
    <div class="card-body">
        @using (@Html.BeginForm("SaveVoter", "Home"))
        {
            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.VoterName)</td>
                    <td>@Html.TextBoxFor(m => m.VoterName, new { @class = "form-control" })</td>
                    <td><button type="submit" class="btn btn-primary">Save</button></td>
                </tr>
            </table>
            
        }
    </div>
</div>
<div>
    @if ((string)TempData["voter"] == "SaveVoter")
    {
        <div class="alert alert-success">
            <strong>You have registered voter successfully</strong>
        </div>
    }
    @if ((string)TempData["voter"] == "Error")
    {
        <div class="alert alert-danger">
            <strong>Invalid Voter Name!</strong>
        </div>
    }
</div>
